{
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:prettier/recommended"
    ],
    "plugins": ["import"],
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "indent": ["errors", 4],
        "prettier/prettier": ["error", { "useTabs": false, "tabWidth": 4 }]
    }
}
